<Window x:Class="IFCStructuralAnalyzer.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:helix="http://helix-toolkit.org/wpf"
        xmlns:converters="clr-namespace:IFCStructuralAnalyzer.Presentation.Converters"
        Title="IFC Structural Analyzer" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        TextElement.Foreground="{StaticResource TextBrush}"
        FontFamily="Segoe UI">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Toolbar -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="OPEN IFC FILE" 
                        Command="{Binding OpenIFCFileCommand}"
                        Background="{StaticResource PrimaryBrush}"
                        Foreground="White"
                        Padding="15,8"
                        Margin="5"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button Content="CLEAR DATABASE" 
                        Command="{Binding ClearDatabaseCommand}"
                        Background="Transparent"
                        Foreground="{StaticResource TextBrush}"
                        BorderBrush="{StaticResource PrimaryBrush}"
                        BorderThickness="1"
                        Padding="15,8"
                        Margin="5"
                        Cursor="Hand"/>

                <Separator Width="20" Background="Transparent"/>

                <TextBlock Text="{Binding FileName}" 
                           VerticalAlignment="Center"
                           FontSize="14"
                           Margin="10,0"/>

                <TextBlock Text="{Binding ProjectName, StringFormat='Project: {0}'}" 
                           VerticalAlignment="Center"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource AccentBrush}"
                           Margin="20,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Statistics -->
            <Border Grid.Column="0" 
                    Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="5" 
                    Padding="15"
                    Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="STATISTICS" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <!-- Total Elements Card -->
                    <Border Background="#1E1E1E" 
                            CornerRadius="3" 
                            Margin="0,5"
                            Padding="15">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="CubeOutline" 
                          Width="32" Height="32"
                          Foreground="{StaticResource PrimaryBrush}"/>

                            <TextBlock Text="Total Elements" 
                                       FontSize="12" 
                                       Opacity="0.7"/>
                            <TextBlock Text="{Binding TotalElements}" 
                                       FontSize="32" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Columns Card -->
                    <Border Background="#1E1E1E" 
                            CornerRadius="3" 
                            Margin="0,5"
                            Padding="15">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="ViewColumn" 
                         Width="32" Height="32"
                         Foreground="#90CAF9"/>
                            <TextBlock Text="Columns" 
                                       FontSize="12" 
                                       Opacity="0.7"/>
                            <TextBlock Text="{Binding ColumnCount}" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="#90CAF9"/>
                        </StackPanel>
                    </Border>

                    <!-- Beams Card -->
                    <Border Background="#1E1E1E" 
                            CornerRadius="3" 
                            Margin="0,5"
                            Padding="15">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="ViewDay" 
                         Width="32" Height="32"
                         Foreground="#FFB74D"/>
                            <TextBlock Text="Beams" 
                                       FontSize="12" 
                                       Opacity="0.7"/>
                            <TextBlock Text="{Binding BeamCount}" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="#FFB74D"/>
                        </StackPanel>
                    </Border>

                    <!-- Slabs Card -->
                    <Border Background="#1E1E1E" 
                            CornerRadius="3" 
                            Margin="0,5"
                            Padding="15">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="RectangleOutline" 
                         Width="32" Height="32"
                         Foreground="#81C784"/>
                            <TextBlock Text="Slabs" 
                                       FontSize="12" 
                                       Opacity="0.7"/>
                            <TextBlock Text="{Binding SlabCount}" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="#81C784"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Volume Card -->
                    <Border Background="#1E1E1E" 
                            CornerRadius="3" 
                            Margin="0,5"
                            Padding="15">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="ChartBox" 
                         Width="32" Height="32" Foreground="#CE93D8"/>
                            <TextBlock Text="Total Volume (m³)" 
                                       FontSize="12" 
                                       Opacity="0.7"/>
                            <TextBlock Text="{Binding TotalVolume, StringFormat='{}{0:F2}'}" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="#CE93D8"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Center Panel - 3D Viewport -->
            <Border Grid.Column="1" 
        Background="{StaticResource SurfaceBrush}" 
        CornerRadius="5"
        Margin="0,0,10,0">
                <Grid>
                    <!-- HelixToolkit 3D Viewport -->
                    <helix:HelixViewport3D x:Name="Viewport3D"
                               Background="#1E1E1E"
                               ShowCoordinateSystem="True"
                               ShowViewCube="True"
                               ModelUpDirection="0,0,1">

                        <!-- Lights -->
                        <helix:SunLight/>

                        <!-- Model Content (Binding) -->
                        <ModelVisual3D Content="{Binding SceneModel}"/>

                        <!-- Grid Floor -->
                        <helix:GridLinesVisual3D Width="50" Length="50" 
                                     MinorDistance="1" MajorDistance="5"
                                     Thickness="0.01"
                                     Fill="#333333"/>
                    </helix:HelixViewport3D>
                    <!-- Overlay Text -->
                    <TextBlock Text="No elements loaded" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Center"
           FontSize="18" 
           Opacity="0.5">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TotalElements}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <!-- 3D Controls Overlay -->
                    <StackPanel VerticalAlignment="Top" 
             HorizontalAlignment="Right"
             Margin="20"
             Opacity="0.9">
                        <Border Background="{DynamicResource MaterialDesignCardBackground}"
             CornerRadius="4"
             Padding="10">
                            <StackPanel>
                                <TextBlock Text="3D VIEW CONTROLS" 
                        FontSize="10"
                        FontWeight="Bold"
                        Margin="0,0,0,5"/>
                                <TextBlock Text="• Mouse drag: Rotate" 
                        FontSize="9"
                        Opacity="0.7"/>
                                <TextBlock Text="• Mouse wheel: Zoom" 
                        FontSize="9"
                        Opacity="0.7"/>
                                <TextBlock Text="• Right drag: Pan" 
                        FontSize="9"
                        Opacity="0.7"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel - Element List -->
            <Border Grid.Column="2" 
        Background="{StaticResource SurfaceBrush}" 
        CornerRadius="5" 
        Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                   Text="ELEMENTS" 
                   FontSize="18" 
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

                    <!-- Filters -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <!-- Search Box -->
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Background="#1E1E1E"
                     Foreground="{StaticResource TextBrush}"
                     Padding="8"
                     FontSize="12"
                     Margin="0,0,0,8">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background" Value="#1E1E1E"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <TextBlock Text="🔍 Search by name or type" 
                       FontSize="10" 
                       Opacity="0.6"
                       Margin="0,-6,0,8"/>

                        <!-- Floor Filter -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                           Text="Floor:" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                            <ComboBox Grid.Column="1"
                          ItemsSource="{Binding AvailableFloors}"
                          SelectedItem="{Binding SelectedFloor}"
                          Background="#1E1E1E"
                          Foreground="{StaticResource TextBrush}"
                          BorderBrush="{StaticResource PrimaryBrush}">                              
                            </ComboBox>

                            <Button Grid.Column="2"
                        Content="✕"
                        Command="{Binding ClearFiltersCommand}"
                        Background="Transparent"
                        Foreground="{StaticResource TextBrush}"
                        BorderThickness="0"
                        Padding="8,4"
                        Margin="5,0,0,0"
                        Cursor="Hand"
                        ToolTip="Clear filters"/>
                        </Grid>

                        <!-- Type Filter -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <RadioButton Content="All" 
                             IsChecked="{Binding SelectedElementTypeFilter, Converter={StaticResource StringComparisonConverter}, ConverterParameter=All}"
                             Foreground="{StaticResource TextBrush}"
                             Margin="0,0,10,0"/>
                            <RadioButton Content="Columns" 
                             IsChecked="{Binding SelectedElementTypeFilter, Converter={StaticResource StringComparisonConverter}, ConverterParameter=Column}"
                             Foreground="{StaticResource TextBrush}"
                             Margin="0,0,10,0"/>
                            <RadioButton Content="Beams" 
                             IsChecked="{Binding SelectedElementTypeFilter, Converter={StaticResource StringComparisonConverter}, ConverterParameter=Beam}"
                             Foreground="{StaticResource TextBrush}"
                             Margin="0,0,10,0"/>
                            <RadioButton Content="Slabs" 
                             IsChecked="{Binding SelectedElementTypeFilter, Converter={StaticResource StringComparisonConverter}, ConverterParameter=Slab}"
                             Foreground="{StaticResource TextBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Element List (Filtered) -->
                    <TabControl Grid.Row="2" 
                    Background="Transparent"
                    BorderThickness="0">

                        <!-- All Elements Tab -->
                        <TabItem Header="All">
                            <DataGrid ItemsSource="{Binding FilteredElements}"
                          SelectedItem="{Binding SelectedElement}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          Background="Transparent"
                          BorderThickness="0"
                          RowBackground="#2D2D30"
                          AlternatingRowBackground="#1E1E1E"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" 
                                           Binding="{Binding Name}" 
                                           Width="*"/>
                                    <DataGridTextColumn Header="Type" 
                                           Binding="{Binding ElementType}" 
                                           Width="Auto"/>
                                    <DataGridTextColumn Header="Floor" 
                                           Binding="{Binding FloorLevel}" 
                                           Width="Auto"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>                       
                    </TabControl>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{StaticResource SurfaceBrush}" 
                Padding="10,5"
                BorderBrush="{StaticResource AccentBrush}"
                BorderThickness="0,1,0,0">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" 
                           VerticalAlignment="Center"/>

                <ProgressBar IsIndeterminate="True" 
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Height="4"
                             VerticalAlignment="Bottom"
                             Foreground="{StaticResource PrimaryBrush}"
                             Background="Transparent"
                             Margin="0,0,0,-5"/>
            </Grid>
        </Border>
    </Grid>
</Window>